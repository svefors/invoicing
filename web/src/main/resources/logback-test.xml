<configuration>
    <appender name="FILE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- "application-name" is a variable -->
        <File>/tmp/logs/foo.log</File>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d %p %t %c - %m%n</Pattern>
        </layout>
    </appender>

    <logger name="sweforce" level="DEBUG"/>
    <logger name="sweforce.invoicing" level="DEBUG"/>

    <logger name="com.vaadin" level="TRACE"/>
    <logger name="org.mortbay" level="TRACE"/>

    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>
</configuration>